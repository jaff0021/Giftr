<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.jaff0021.giftr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Jaff0021-Giftr</name>
    <description>
        An App that lets you make gift lists for contacts
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Zaheed Rizwan Jaffer
    </author>
    <content src="index.html" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="5000"/>
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <splash density="port-mdpi" src="res/screens/Splashscreens_MDPI-Portrait.png"/>
        <splash density="port-hdpi" src="res/screens/Splashscreens_HDPI-Portrait.png"/>
        <splash density="port-xhdpi" src="res/screens/Splashscreens_XHDPI-Portrait.png"/>
        <splash density="port-xxhdpi" src="res/screens/Splashscreens_XXHDPI-Portrait.png"/>
        <splash density="port-xxxhdpi" src="res/screens/Splashscreens_XXXHDPI-Portrait.png"/>
        
        <splash density="land-mdpi" src="res/screens/Splashscreens_MDPI-Landscape.png"/>
        <splash density="land-hdpi" src="res/screens/Splashscreens_HDPI-Landscape.png"/>
        <splash density="land-xhdpi" src="res/screens/Splashscreens_XHDPI-Landscape.png"/>
        <splash density="land-xxhdpi" src="res/screens/Splashscreens_XXHDPI-Landscape.png"/>
        <splash density="land-xxxhdpi" src="res/screens/Splashscreens_XXXHDPI-Landscape.png"/>
        
        <icon density="mdpi" src="res/icons/giftricons_icon-48-mdpi.png"/>
        <icon density="hdpi" src="res/icons/giftricons_icon-72-hdpi.png"/>
        <icon density="xhdpi" src="res/icons/giftricons_icon-96-xhdpi.png"/>
        <icon density="xxhdpi" src="res/icons/giftricons_icon-144-xxhdpi.png"/>
        <icon density="xxxhdpi" src="res/icons/giftricons_icon-192-xxxhdpi.png"/>
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
