<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.jaff0021.giftr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Jaff0021-Giftr</name>
    <description>
        An App that lets you make gift lists for contacts
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Zaheed Rizwan Jaffer
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
</widget>
